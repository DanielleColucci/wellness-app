<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1><%= title %></h1>
  <table>
    <thead>
      <tr>
        <th>Recipe Name</th>
        <th>Meal</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach(recipe => { %>
        <tr>
          <td><%= recipe.name %></td>
          <td><%= recipe.meal %></td>
          <td><%= recipe.owner.name %></td>
          <td>
            <a href="/recipes/<%= recipe._id %>">Details</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>