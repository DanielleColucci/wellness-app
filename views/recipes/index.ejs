<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table>
    <thead>
      <tr>
        <th>Recipe Name</th>
        <th>Meal</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach(recipe => { %>
        <tr>
          <td><%= recipe.name %></td>
          <td><%= recipe.meal %></td>
          <td>
            <img src="<%= recipe.owner.avatar %>" alt="<%= recipe.owner.name %>'s avatar">
            <%= recipe.owner.name %>
          </td>
          <td>
            <a href="/recipes/<%= recipe._id %>">Details</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>