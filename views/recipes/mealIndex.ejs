<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/index.css">
<%- include('../partials/nav') %>

<main>
  <div id="header">
    <img src="/assets/header-photo.jpeg" alt="photo of dinner table">
    <section id="title">
      <h1><%= title %></h1>
      <div>
        <a class="all-button" href="/recipes">all recipes→</a>
        <% if (user) { %>
          <a id="header-new-button" href="/recipes/new">add new recipe→</a>
        <% } %>
      </div>
    </section>
  </div>
  <section id="content">
    <div id="card-container">
      <% recipes.forEach(recipe => { %>
        <div class="card">
          <div class="card-title">
            <h2><%= recipe.name %></h2>
            <h3><%= recipe.owner.name %></h3>
          </div>
          <div class="details-button">
            <a href="/recipes/<%= recipe._id %>">Details→	</a>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>