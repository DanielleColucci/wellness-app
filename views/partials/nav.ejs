  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <div id="nav-links">
      <a href="/"><i class="fas fa-rainbow fa-2x"></i></a>
      <% if (user) { %>
        <a 
          href="/recipes/new" <%- title === 'New Recipe' ? 'class="active"' : '' %> 
        >
          add new recipe
        </a>
      <% } %>
      <a 
        href="/recipes" <%- title === 'All Recipes' ? 'class="active"' : '' %>
      >
        recipes
      </a>
      <% if (user) { %>
        <a 
          href="/exercises/new" <%- title === 'Log Exercise' ? 'class="active"' : '' %>
        >
          log exercise
        </a>
      <% } %>
      <a 
        href="/exercises" <%- title === 'Public Exercises' ? 'class="active"' : '' %>
      >
        exercises
      </a>
      <% if (user) { %>
        <a 
          href="/profiles" <%- title === 'Profiles' ? 'class="active"' : '' %>
        >
          profiles
        </a>
      <% } %>
    </div>
    <div id="login-links">
      <% if (user) { %>
        <a id="my-profile-btn" href="/profiles/<%= user.profile._id %>" <%- title === `${user.profile.name}'s Profile` ? 'class="active"' : '' %>>your profile</a>
        <a id="logout-link" href="/auth/logout">
          <button type="submit">logout</button>
        </a>
      <% } else { %>
        <div 
          id="g_id_onload"
          data-client_id="<%= googleClientID %>"
          data-login_uri="/auth/google"
          data-auto_prompt="false"
        ></div>
        <div 
          class="g_id_signin right"
          data-type="standard"
          data-size="large"
          data-theme="outline"
          data-text="sign_in_with"
          data-shape="rectangular"
          data-logo_alignment="left"
        ></div>
      <% } %>
    </div>
  </nav>
